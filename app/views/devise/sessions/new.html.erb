<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2 class="text-center">Log in</h2>
<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email,placeholder: 'email', autofocus: true, class: 'form-control', autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: 'form-control', placeholder: 'password',autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'form-control login-button' %>
  </div>
<% end %>

  <%= render "devise/shared/links" %>
  </div>
  </div>
</div>

